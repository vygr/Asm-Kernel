(defun find-in-buffer (ss)
	(unless (eql ss "")
		(each (lambda (ln) (when (not (eql nil (defq found (substr ss ln))))
			(defq y _)
			(each (lambda (x) (push find_list (list x y))) found)))
				(elem +text_buffer+ current_text))
		(setq find_index 0)))

(defun open-find ()
	;if there is a previous search, clear and conduct a new one.
	(when (/= (length find_list) 0) (setq find_list (list) find_index 0))
	(find-in-buffer (setq find_textfield (get :text mytextfield)))
	(bind '(ox oy cx cy sx) (elem +text_position+ current_text))
	(cond
		((> (defq fl_len (length find_list)) 0)
			(bind '(fx fy) (first find_list))
			(set-cursor fx fy)
			(setq status_bar_msg (str " - " (str (inc find_index)) " of " (str (length find_list)) " Matches. "))
			(set sb_label :text (cat "Line " (str fy) ", Column " (str fx) status_bar_msg))
			(. status_bar :layout)
			(. sb_label :dirty)
			(window-layout vdu_width vdu_height))
		((eql (get :text mytextfield) "") (setq status_bar_msg "")
			(. sb_label :dirty))
		(t 
			(setq status_bar_msg " - No Matches Found")
			(set sb_label :text (cat "Line " (str cy) ", Column " (str cx) status_bar_msg))
			(. sb_label :layout)
			(. status_bar :layout)
			(. sb_label :dirty))))

(defun find-next ()
	(cond 
		((or (not (eql (get :text mytextfield) find_textfield)) (= (length find_list) 0)) (open-find))
		(t 
			(if (= find_index (dec (defq fl_len (length find_list))))
				(setq find_index 0) (setq find_index (inc find_index)))
			(bind '(fx fy) (elem find_index find_list))
			(set-cursor fx fy)
			(setq status_bar_msg (str " - " (str (inc find_index)) " of " (str (length find_list)) " Matches. "))
			(set sb_label :text (cat "Line " (str fy) ", Column " (str fx) status_bar_msg))
			(. sb_label :layout)
			(. sb_label :dirty)
			(window-layout vdu_width vdu_height))))

(defun find-prev ()
	(cond 
		((or (not (eql (get :text mytextfield) find_textfield)) (= (length find_list) 0)) (open-find))
		(t 
			(if (= find_index 0) 
				(setq find_index (dec (length find_list))) (setq find_index (dec find_index)))
			(bind '(fx fy) (elem find_index find_list))
			(set-cursor fx fy)
			(setq status_bar_msg (str " - " (str (inc find_index)) " of " (str (length find_list)) " Matches. "))
			(set sb_label :text (cat "Line " (str fy) ", Column " (str fx) status_bar_msg))
			(. sb_label :layout)
			(. sb_label :dirty)
			(window-layout vdu_width vdu_height))))